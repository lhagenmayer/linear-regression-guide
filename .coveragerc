[run]
source = src
omit =
    */tests/*
    */test_*
    src/__init__.py
    */migrations/*
    .venv/*
    venv/*
    __pycache__/*
    */__pycache__/*
    .pytest_cache/*
    .tox/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    if TYPE_CHECKING:
    # Streamlit-specific exclusions
    st\.

ignore_errors = True
skip_covered = False
show_missing = True

[html]
directory = htmlcov

[xml]
output = coverage.xml